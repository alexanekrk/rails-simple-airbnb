<h1>All our Flats (<%= @flats.count %>) </h1>

<%= link_to "Add a flat", new_flat_path, class:"btn btn-primary mb-5 mt-3"%>

<div class="d-flex justify-content-between flex-wrap">
  <% @flats.each do |flat| %>
    <div class='card mb-3' style="width: 18rem;">
      <div class='card-header'>
        <h5 class="card-title"><%= flat.name %></h5>
      </div>

      <div class="card-body">
        <h6 class="card-subtitle mb-2 text-muted"><%= flat.address %></h6>
        <div class='d-flex justify-content-between'>
          <div><i class="fa-solid fa-people-group"></i><%= flat.number_of_guests %></div>
          <div><i class="fa-solid fa-euro-sign"></i><%= flat.price_per_night %></div>
        </div>
      </div>

      <div class="d-flex justify-content-between m-3">
        <p><%= link_to "More info", flat_path(flat), class:'color: blue' %></p>
        <p><%= link_to "Edit", edit_flat_path(flat), class:'color: yellow' %></p>
        <p><%= link_to "Remove",
            flat_path(flat),
            data: {turbo_method: :delete, turbo_message: 'Sure?'},
        class:'color: red' %></p>
      </div>
    </div>
  <% end %>
</div>
